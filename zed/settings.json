// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "dock": "right",
    "default_profile": "write",
    "default_model": {
      "provider": "ollama",
      "model": "qwen3:8b"
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "qwen3:8b",
          "max_tokens": 32768,
          "supports_tools": true,
          "supports_thinking": true,
          "supports_images": false
        }
      ]
    }
  },
  "preferred_line_length": 140,
  "soft_wrap": "bounded",
  "features": {
    "edit_prediction_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "vim": {
    "cursor_shape": {
      "normal": "hollow",
      "replace": "underline",
      "visual": "block"
    }
  },
  "relative_line_numbers": true,
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "One Dark"
  },
  "experimental.theme_overrides": {
    "search.match_background": "#ff00f090",
    "warning.background": "#FF00FF20",
    // "hint.background": "#FF00FF20",
    // "error.background": "#FF00FF20",
    // "info.background": "#FF00FF20",
    "players": [
      {
        "selection": "#FF00FF20"
      }
    ]
  }
}
